@model ArticleForUserDto
<!-- Start _post -->
<div class="blog blog-post ">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-10 mx-auto">
                <!--post heading area2021-->
                <div class="social">
                    <div class="share-us ">
                        <h6 class="share-title">share post:</h6>
                        <div class="sc-wrapper dir-row sc-flat">
                            <ul class="sc-list">
                                <li class="sc-item " title="Facebook"><a class="sc-link" href="#0" title="social media icon"><i class="fab fa-facebook-f sc-icon"></i></a></li>
                                <li class="sc-item " title="youtube"><a class="sc-link" href="#0" title="social media icon"><i class="fab fa-youtube sc-icon"></i></a></li>
                                <li class="sc-item " title="instagram"><a class="sc-link" href="#0" title="social media icon"><i class="fab fa-instagram sc-icon"></i></a></li>
                                <li class="sc-item " title="twitter"><a class="sc-link" href="#0" title="social media icon"><i class="fab fa-twitter sc-icon"></i></a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <h2 class="post-title">@Model.Title </h2>
                <div class="post-img-wrapper post-featured-area"><img class="featured-img" loading="lazy" src="~/images/@Model.Image.FileName" alt="@Model.Title"></div>
            </div>
            <div class="col-12 col-lg-9 mx-auto">
                <div class="post-main-area">
                    <div class="post-info"><a class="info post-cat" ><i class="fas fa-list-alt icon"></i>@Model.Category.Name</a><a class="info post-author"><i class="fas fa-user icon"></i>@Model.User.FirstName @Model.User.LastName</a><a class="info post-date" ><i class="fas fa-history icon"></i>@Model.CreatedDate.ToString("dd/MM/yyyy")</a><a class="info post-time"><i class="fas fa-eye icon"></i>@Model.ViewCount</a></div>
                    <div class="post-content">
                        <p class=" first-litter post-text">
                            @Html.Raw(Model.Content)


                        </p>
                        
                    </div>
                    <!--tags panel-->
                    
                    <div class="other-posts panel">
                        <h6 class="panel-title">posts by the author</h6>
                        <div class="row">
                            <div class="col-12 col-sm-6 mb-3">
                                <div class="prev-post">
                                    <a class="other-post-link" href="#0">
                                        <div class="other-post-img" title="Previous Post">
                                            <img class="img-fluid" loading="lazy" src="~/stand-blog/assets/images/blog/post-images/1.jpg" alt="other posts Image">
                                        </div>
                                        <h6 class="other-post-title">how to get early saves your day and give you the productivity you want</h6>
                                    </a>
                                </div>
                            </div>
                            <div class="col-12 col-sm-6">
                                <div class="next-post">
                                    <a class="other-post-link" href="#0">
                                        <div class="other-post-img" title="Next Post">
                                            <img class="img-fluid" loading="lazy" src="~/stand-blog/assets/images/blog/post-images/2.jpg" alt="other posts Image">
                                        </div>
                                        <h6 class="other-post-title">9 Habits Make You A Better Person, No. 3 Will Surprise You</h6>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End _post -->