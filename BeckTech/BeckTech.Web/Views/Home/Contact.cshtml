@model ContactDto
@{
    ViewBag.Title = "İletişim";

}
<!-- Start inner Page hero-->
<section class="d-flex align-items-center page-hero  inner-page-hero " id="page-hero">
    <div class="overlay-photo-image-bg parallax" data-bg-img="/stand-blog/assets/images/hero/inner-page-hero.jpg" data-bg-opacity="1"></div>
    <div class="overlay-color" data-bg-opacity=".75"></div>
    <div class="container">
        <div class="hero-text-area centerd">
            <h1 class="hero-title  wow fadeInUp" data-wow-delay=".2s">Bize Ulaşın</h1>
            <nav aria-label="breadcrumb ">
                <ul class="breadcrumb wow fadeInUp" data-wow-delay=".6s">
                    <li class="breadcrumb-item"><a class="breadcrumb-link" href="#0"><i class="bi bi-house icon "></i>Ana Sayfa</a></li>
                    <li class="breadcrumb-item active">İletişim</li>
                </ul>
            </nav>
        </div>
    </div>
</section>
<!-- End inner Page hero-->
<!-- Start contact-us -->
<section class="contact-us  mega-section  pb-0" id="contact-us">
    <div class="container">
        <section class="locations-section  mega-section ">
            <div class="sec-heading centered  ">
                <div class="content-area">
                    <h2 class=" title    wow fadeInUp" data-wow-delay=".4s">Lütfen İletişime geçin</h2>
                </div>
            </div>
            <div class=" contact-info-panel ">
                <div class="info-section ">
                    <div class="row">

                        <div class="col-12 col-lg-12">
                            <div class="info-panel  wow fadeInUp" data-wow-delay=".6s">
                                <h4 class="location-title">Ankara</h4>
                                <div class="line-on-side "> </div>
                                <p class="location-address">
                                    İhsan Doğramacı Blv. Üniversiteler Mah.
                                    No:31-1, ODTÜ TEKNOKENT 06800
                                    Çankaya/Ankara
                                </p>
                                <div class="location-card  ">
                                    <i class="flaticon-email icon"></i>
                                    <div class="card-content">
                                        <h6 class="content-title">email:</h6><a class="email link" href="mailto:nfo@becktech.com.tr">info@becktech.com.tr</a>
                                    </div>
                                </div>

                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </section>
        <section class="map-section  elf-section">
            <div class="sec-heading  centered   ">
                <div class="content-area">
                    <h2 class=" title    wow fadeInUp" data-wow-delay=".4s">Harita Üzerinde Konumumuz</h2>
                </div>
            </div>
            <div class="map-box  wow fadeInUp" data-wow-delay=".6s">
                <div class="mapouter">
                    <div class="gmap_canvas">
                        <iframe class="map-iframe" id="gmap_canvas" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d303112.4299144069!2d32.86231185415124!3d39.92963348153205!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d34e397911728b%3A0x5239b7a85b131319!2sODT%C3%9C+Teknokent!5e0!3m2!1sen!2str!4v1649270291000!5m2!1sen!2str"></iframe>
                    </div>
                </div>
            </div>
        </section>
        <section class="contact-us-form-section  mega-section  ">
            <div class="row">
                <div class="col-12 ">
                    <div class="contact-form-panel">
                        <div class="sec-heading centered    ">
                            <div class="content-area">
                                <h2 class=" title    wow fadeInUp" data-wow-delay=".4s">Sorularınız mı var? Hadi Cevaplayalım</h2>
                            </div>
                        </div>
                        <div class="contact-form-inputs wow fadeInUp" data-wow-delay=".6s">
                            <div class="custom-form-area input-boxed">
                                <!--Form To have user messages-->
                                <form class="main-form" id="contact-us-form" asp-action="Contact" asp-controller="Home" method="post">
                                    <span class="done-msg"></span>
                                    <div class="row ">
                                        <div class="col-12 col-lg-6">
                                            <div class="input-wrapper">
                                                <input asp-for="NameSurname" class="text-input" id="user-name" name="NameSurname" type="text" />
                                                <label asp-for="NameSurname" class="input-label" for="user-name"> Ad Soyad <span class="req">*</span></label><span class="b-border"></span><span class="error-msg"></span>
                                            </div>
                                        </div>
                                        <div class="col-12 col-lg-6">
                                            <div class="   input-wrapper">
                                                <input asp-for="Email" class="text-input" id="user-email" name="Email" type="email" />
                                                <label asp-for="Email"  class="input-label" for="user-email"> E-mail <span class="req">*</span></label><span class="b-border"></span><span class="error-msg"></span>
                                            </div>
                                        </div>
                                        <div class="col-12 ">
                                            <div class="   input-wrapper">
                                                <input asp-for="Subject" class="text-input" id="msg-subject" name="Subject" type="text" />
                                                <label asp-for="Subject" class="input-label" for="msg-subject"> Konu <span class="req">*</span></label><span class="b-border"></span><span class="error-msg"></span>
                                            </div>
                                        </div>
                                        <div class="col-12 ">
                                            <div class="   input-wrapper">
                                                <textarea asp-for="Message" class=" text-input" id="msg-text" name="Message"></textarea>
                                                <label asp-for="Message" class="input-label" for="msg-text"> Mesajınız <span class="req">*</span></label><span class="b-border"></span><i></i><span class="error-msg"></span>
                                            </div>
                                        </div>
                                        <div class="col-12 submit-wrapper">
                                            <button class=" btn-solid" id="submit-btn" type="submit" name="UserSubmit">Mesajı Gönder</button>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</section>
<!-- End contact-us -->