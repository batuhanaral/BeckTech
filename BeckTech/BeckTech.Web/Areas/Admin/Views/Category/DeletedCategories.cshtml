@model List<CategoryDto>
<div class=" container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-lg-3 mb-4">
        <span class="text-muted fw-dark">Çöp Kutusu/</span> Kategoriler
    </h4>

    <div class="card">
        <div class="table-responsive text-nowrap m-5">
            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="Category" asp-action="Add">
                Kategori Ekle <i class="bx bx-plus"> </i>
            </a>
            <table class="table table-bordered" id="categoriesTable" width="100%" cellspacing="0">
                <thead class="table-dark">
                    <tr>
                        <th>İsim</th>
                        <th>Oluşturma Tarih</th>
                        <th>Oluşturan</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                @*     <tfood class="table-dark">
                <tr>
                <th>Başlık</th>
                <th>Kategori</th>
                <th>Oluşturma Tarih</th>
                <th>Yazar</th>
                <th>Durum</th>
                <th>İşlemler</th>
                </tr>
                </tfood> *@

                <tbody class="table-border-bottom-0">
                    @foreach (var category in Model)
                    {
                        <tr name="@category.Id">
                            <td>@category.Name</td>
                            <td>@category.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td>@category.CreatedBy</td>
                            <td>@(category.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                            <td>
                                <a class="btn btn-success btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="UndoDelete" asp-route-categoryId="@category.Id">
                                    <i class="bx bx-undo"></i>

                                </a>
                                @* <a class="btn btn-success btn-sm" data-id="@category.Id" asp-area="Admin" asp-controller="Category" asp-action="UndoDelete" asp-route-categoryId="@category.Id">
                                    <i class="bx bxs-minu"></i>

                                </a> *@
                            </td>

                        </tr>
                    }
                </tbody>


            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/categoryScript.js" type="application/ecmascript"></script>
}
