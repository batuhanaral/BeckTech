@model List<ContactDto>
<div class=" container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-lg-3 mb-4">
        <span class="text-muted fw-dark">Kullanıcı Yönetimi/</span> Mesajlar
    </h4>

    <div class="card">
        <div class="table-responsive text-nowrap m-5">
            
            <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0">
                <thead class="table-dark">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Konu</th>
                        <th>Durum</th>
                       
                    </tr>
                </thead>
                @*     <tfood class="table-dark">
                <tr>
                <th>Başlık</th>
                <th>Kategori</th>
                <th>Oluşturma Tarih</th>
                <th>Yazar</th>
                <th>Durum</th>
                <th>İşlemler</th>
                </tr>
                </tfood> *@

                <tbody class="table-border-bottom-0">
                    @foreach (var contact in Model)
                    {
                        <tr name="@contact.Id">
                            <td>@contact.NameSurname</td>
                            <td>@contact.Email</td>
                            <td>@contact.Subject</td>
                           
                            
                           

                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@contact.Id" asp-area="Admin" asp-controller="User" asp-action="ContactDetail" asp-route-contactId="@contact.Id">
                                    <i class="bx bxs-book"></i>
                                    Oku

                                </a>
                                <a class="btn btn-danger btn-sm" data-id="@contact.Id" asp-area="Admin" asp-controller="User" asp-action="ContactDelete" asp-route-contactId="@contact.Id">
                                    <i class="bx bxs-minus-circle"></i>
                                    Sil
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>


            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/userScript.js" type="application/ecmascript"></script>
}
