@model List<UserDto>
<div class=" container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-lg-3 mb-4">
        <span class="text-muted fw-dark">Kullanıcı Yönetimi/</span> kategoriler
    </h4>

    <div class="card">
        <div class="table-responsive text-nowrap m-5">
            <a class="btn btn-success mb-3" asp-area="Admin" asp-controller="User" asp-action="Add">
                Kullanıcı Ekle <i class="bx bx-plus"> </i>
            </a>
            <table class="table table-bordered" id="usersTable" width="100%" cellspacing="0">
                <thead class="table-dark">
                    <tr>
                        <th>İsim</th>
                        <th> Soyisim</th>
                        <th>Email</th>
                        <th>Telefon Numarası</th>
                        <th>Role</th>
                        <th>Email Doğrulaması</th>
                        <th>Bağlantı Hataları</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                @*     <tfood class="table-dark">
                <tr>
                <th>Başlık</th>
                <th>Kategori</th>
                <th>Oluşturma Tarih</th>
                <th>Yazar</th>
                <th>Durum</th>
                <th>İşlemler</th>
                </tr>
                </tfood> *@

                <tbody class="table-border-bottom-0">
                    @foreach (var user in Model)
                    {
                        <tr name="@user.Id">
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.Email</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Role</td>
                            <td>
                                @{
                                    var text = user.EmailConfirmed ? "Doğrulanmış" : "Doğrulanmamış";
                                    var color = user.EmailConfirmed ? "green" : "red";
                                }
                                <span style="color: @color;">@text</span>
                            </td>
                            <td>@user.AccessFailedCount</td>
                           
                            <td>
                                <a class="btn btn-primary btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Update" asp-route-userId="@user.Id">
                                    <i class="bx bxs-edit"></i>
                                    

                                </a>
                                <a class="btn btn-danger btn-sm" data-id="@user.Id" asp-area="Admin" asp-controller="User" asp-action="Delete" asp-route-userId="@user.Id">
                                    <i class="bx bxs-minus-circle"></i>

                                </a>
                            </td>

                        </tr>
                    }
                </tbody>


            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/userScript.js" type="application/ecmascript"></script>
}
