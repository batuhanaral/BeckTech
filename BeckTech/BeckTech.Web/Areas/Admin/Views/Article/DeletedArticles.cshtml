@model List<ArticleDto>
<div class=" container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-lg-3 mb-4">
        <span class="text-muted fw-dark">Cöp Kutusu /</span> Makaleler
    </h4>

    <div class="card">
        <div class="table-responsive text-nowrap m-5">
            
            <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
                <thead class="table-dark">
                    <tr>
                        <th>Başlık</th>
                        <th>Kategori</th>
                        <th>Oluşturma Tarih</th>
                        <th>Yazar</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                @*     <tfood class="table-dark">
                <tr>
                <th>Başlık</th>
                <th>Kategori</th>
                <th>Oluşturma Tarih</th>
                <th>Yazar</th>
                <th>Durum</th>
                <th>İşlemler</th>
                </tr>
                </tfood> *@

                <tbody class="table-border-bottom-0">
                    @foreach (var article in Model)
                    {
                        <tr name="@article.Id">
                            <td>@article.Title</td>
                            <td>@article.Category.Name</td>
                            <td>@article.CreatedDate.ToString("dd/MM/yyyy")</td>
                            <td>@article.CreatedBy</td>
                            <td>@(article.IsDeleted ? "Aktif Değil" : "Aktif")</td>
                            <td>
                                <a class="btn btn-success btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="UndoDelete" asp-route-articleId="@article.Id">
                                    <i class="bx bx-undo"></i>

                                </a>
                                @* <a class="btn btn-danger btn-sm" data-id="@article.Id" asp-area="Admin" asp-controller="Article" asp-action="Delete" asp-route-articleId="@article.Id">
                                    <i class="bx bxs-minus-circle"></i>

                                </a> *@
                            </td>

                        </tr>
                    }
                </tbody>


            </table>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/js/articleScript.js" type="application/ecmascript"></script>
}
